.col-sm-10.col-sm-offset-1
  .content.row
    .cancel
      = link_to 'X', content, method: :delete, data: { confirm: 'Are you sure?' }
    .content-summary.col-sm-1
      = image_tag "icons/#{content.content_type.name}.png"
    .content-title
      = content.title
    .content-info
      %p
        = content.content_type.name
    .content-actions
      = link_to 'Edit Details', edit_content_path(content)


