= form_for @content_type do |f|
  - if @content_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@content_type.errors.count, "error")} prohibited this content_type from being saved:"
      %ul
        - @content_type.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :file_types
    = f.text_field :file_types
  .actions
    = f.submit 'Save'
