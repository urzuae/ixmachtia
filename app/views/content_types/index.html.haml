%h1 Listing content_types

%table
  %thead
    %tr
      %th Name
      %th Description
      %th File types
      %th
      %th
      %th

  %tbody
    - @content_types.each do |content_type|
      %tr
        %td= content_type.name
        %td= content_type.description
        %td= content_type.file_types
        %td= link_to 'Show', content_type
        %td= link_to 'Edit', edit_content_type_path(content_type)
        %td= link_to 'Destroy', content_type, method: :delete, data: { confirm: 'Are you sure?' }

