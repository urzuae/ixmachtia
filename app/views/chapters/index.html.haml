%h1 Listing chapters

%table
  %thead
    %tr
      %th Title
      %th Description
      %th Order
      %th Course
      %th
      %th
      %th

  %tbody
    - @chapters.each do |chapter|
      %tr
        %td= chapter.title
        %td= chapter.description
        %td= chapter.order
        %td= chapter.course
        %td= link_to 'Show', chapter
        %td= link_to 'Edit', edit_chapter_path(chapter)
        %td= link_to 'Destroy', chapter, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Chapter', new_chapter_path
